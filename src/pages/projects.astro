---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects</div>
  </div>

  <HorizontalCard
    title="EasyCoach"
    img="/EasyCoach.png"
    desc="Developed a CRM software For Personal Trainers. The goal was to make it easy for personal trainers to manage their clients and their schedules and also to make it easy for clients to book sessions with their trainers. "
    url="https://easycoach.vercel.app"
    badge="POWERED BY AI"
  />

  <div class="divider my-0"></div>

  <HorizontalCard
    title="Gradientify"
    img="/Gradientify.png"
    desc="A tool to generate Tailwind CSS gradients. It also has a feature to generate random gradients. Copy the Tailwind CSS code with a single click."
    url="https://gradientify-generator.vercel.app"
  />
</BaseLayout>
